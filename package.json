{
  "name": "web-map",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development ./node_modules/.bin/webpack-dev-server --mode development --hot",
    "static": "cp -R static dist/static",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack -p --progress && npm run static",
    "lint": "eslint '*.{ts,js}' 'src/**/*.{ts,tsx,js,jsx}' && stylelint 'src/**/*.css'",
    "format": "prettier --write '*.{ts,js}' 'src/**/*.{ts,tsx,js,jsx}' && eslint '*.{ts,js}' 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "serve": "http-server -s -p 3000 dist",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dzabrotskiy/web-map.git"
  },
  "author": "Daniil Zabrotskiy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dzabrotskiy/web-map/issues"
  },
  "homepage": "https://github.com/dzabrotskiy/web-map#readme",
  "dependencies": {
    "@2gis/mapgl": "^1.0.0",
    "@2gis/mapgl-clusterer": "^1.2.2",
    "html-webpack-plugin": "^4.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.10.0",
    "path": "^0.12.7",
    "prettier": "^2.0.5",
    "react-dev-utils": "^10.2.1",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^8.0.2",
    "typescript-eslint": "0.0.1-alpha.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{json,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
